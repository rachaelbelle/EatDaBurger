<div class="container">
  <div class="row">
    <div class="xs-12 sm-8 header-box">
      <img src="assets/img/8bitBurger2.jpeg" class="burger-image" alt="8 Bit Burger"></div>
  </div>
    <div class="row">
    <div class="xs-12 sm-8 subheader-box">
      <h1>Eat Da Burger!</h1>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-xs-6 text-center">
    <ul>
      <div class="row">
        <h4>Burgers ordered:</h4>
        <div class="row">
          <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
  </div>

  <div class="col-xs-6 text-center">
    <div class="col-smm-6 mx-auto">
      <h4>Burgers already devoured:</h4>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>


  <div class="col-sm-12 text-center">
    <h3>Add a Burger!</h3>
    <form class="create-form">
      <div class="form-group">
        <input type="text" class="btn-lg text-center" id="name" name="name" placeholder="Insert Burger Name">
        <input type="hidden" id="devoured" value="false">
        <button type="submit" class="btn btn-success btn-lg">Add Burger</button>

      </div>
    </form>
  </div>
</div>
