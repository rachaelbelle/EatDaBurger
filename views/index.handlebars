<h1>Eat Da Burger!</h1>

<h2>All Burgers</h2>
<ul>
  {{#each burgers}}
  <li>
	{{name}}
    <img src={{picurl}} alt={{name}} />
    <button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
      {{#if sleep}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
    </button>

  </li>
  {{/each}}
</ul>

<h2>Dogs that are not sleepy</h2>

<ul>
  <li>dog one</li>
</ul>

<h2>Dogs that are sleepy</h2>
<ul>
  <li>sleepy dog one</li>
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Type:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
